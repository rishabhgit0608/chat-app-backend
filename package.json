{
  "name": "chat-app-backend",
  "version": "1.0.0",
  "description": "Backend for private chat application with WebRTC support",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "node build.js",
    "start": "node dist/app.js",
    "start:dev": "tsx src/app.ts",
    "deploy": "npm run build && npm start"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "uuid": "^11.0.5",
    "dotenv": "^16.4.7",
    "express-rate-limit": "^7.4.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.16.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.12",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
